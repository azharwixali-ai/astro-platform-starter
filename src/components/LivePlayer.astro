const streamUrl = "http://xtv.ooo:8080/live/938437191/952117166/167569.m3u8";
---

<video 
  id="video" 
  controls 
  autoplay 
  style="width:900px; height:600px; background:black; border-radius:10px;" 
/>

<!-- üëá Pehle hls.js CDN se load karo -->
<script src="https://cdn.jsdelivr.net/npm/hls.js@latest" defer></script>

<!-- üëá Ab apna custom script likho -->
<script>
  window.addEventListener("load", () => {
    const video = document.getElementById("video");
    const streamUrl = "{{streamUrl}}";

    if (window.Hls && Hls.isSupported()) {
      const hls = new Hls();
      hls.loadSource(streamUrl);
      hls.attachMedia(video);
      console.log("‚úÖ HLS Stream Loaded");
    } else if (video.canPlayType("application/vnd.apple.mpegurl")) {
      video.src = streamUrl;
      console.log("‚úÖ Native HLS Supported");
    } else {
      console.error("‚ùå HLS not supported in this browser");
    }
  });
</script>
